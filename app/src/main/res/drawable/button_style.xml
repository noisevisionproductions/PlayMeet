        <shape>
            <solid android:color="#7EABAE" />
            <corners android:radius="10dp" />
            <stroke android:width="5px" android:color="#443434" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <solid android:color="#7EABAE" />
            <corners android:radius="10dp" />
            <stroke android:width="5px" android:color="#443434" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#EADBC4" />
