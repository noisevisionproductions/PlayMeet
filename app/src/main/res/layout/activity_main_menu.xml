<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/updateUserInfoBar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/gradient_background_button"
            android:gravity="center"
            android:inputType="none"
            android:text="@string/setUpProfileFirstTime"
            android:textColor="#FFFFFF"
            android:textSize="13sp"
            android:textStyle="bold"
            android:typeface="serif"
            android:visibility="gone" />

        <include
            android:id="@+id/appVersionInfo"
            layout="@layout/version_info"
            android:visibility="gone" />

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragmentContainerActivePosts"
            android:name="com.example.playmeet.PostsManagement.AllPostsManagement.PostsOfTheGamesFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/button_container"
            android:layout_marginTop="50dp"
            app:defaultNavHost="true"
            tools:layout="@layout/fragment_all_posts_list" />


        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/button_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:background="@color/background"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/yourPostsMenu"
                style="@style/MyButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_style"
                android:text="@string/postsAddedByYou" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/showAllPostsMenu"
                style="@style/MyButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_style"
                android:text="@string/backToMainMenu" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/savedPostsMenu"
                style="@style/MyButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_style"
                android:text="@string/postsSavedByYou" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/chatRoomMenu"
                style="@style/MyButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_style"
                android:text="@string/chat" />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </RelativeLayout>

    <include layout="@layout/navigation_view_side_panel" />

</androidx.drawerlayout.widget.DrawerLayout>
