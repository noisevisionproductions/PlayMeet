<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PostsManagement.PostCreatingLogic">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background"
            android:orientation="vertical"
            android:padding="25dp"
            tools:context=".PostsManagement.PostCreatingLogic"
            tools:openDrawer="end">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/nickname"
                style="@style/MyAppCompatTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="30dp"
                android:paddingBottom="20dp"
                android:text="@string/postCreating"
                android:textColor="@color/text"
                android:textSize="25sp" />

            <!--nazwa sportu-->
            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/arrays_sport_names"
                style="@style/MySpinnerStyleForDefaultInput"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="20dp"
                android:background="@color/secondary20"
                android:entries="@array/arrays_sport_names"
                android:textSize="30sp" />

            <!--nazwa miasta-->
            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/cities_in_poland"
                style="@style/MySpinnerStyleForDefaultInput"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="20dp"
                android:background="@color/secondary20"
                android:textSize="30sp" />

            <!--poziom gry-->
            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/arrays_skill_level"
                style="@style/MySpinnerStyleForDefaultInput"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="10dp"
                android:background="@color/secondary20"
                android:entries="@array/arrays_skill_level"
                android:textSize="30sp" />

            <!--Ilość osób potrzebnych-->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/howManyPeopleNeeded"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:background="@color/secondary20"
                    android:gravity="center"
                    android:hint="@string/howManyPeopleNeeded"
                    android:inputType="number"
                    android:maxLength="2"
                    android:padding="10dp"
                    android:textAlignment="center"
                    android:textSize="15sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!--wybor daty i godziny-->
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/chooseDate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/secondary20"
                        android:gravity="center"
                        android:hint="@string/chooseDate"
                        android:inputType="date"
                        android:textSize="15sp" />

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/dateNegotiable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hourDateDoesntMatter" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/chooseHour"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/secondary20"
                        android:hint="@string/chooseHour"
                        android:inputType="date"
                        android:textAlignment="center"
                        android:textSize="15sp" />

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/hourNegotiable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hourDateDoesntMatter" />
                </com.google.android.material.textfield.TextInputLayout>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <!--Dodatkowe informacje-->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/addInfo"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@color/secondary20"
                    android:hint="@string/extraInfo"
                    android:inputType="textAutoCorrect|textMultiLine"
                    android:maxLength="220"
                    android:maxLines="5"
                    android:padding="10dp"
                    android:textSize="15sp" />
            </com.google.android.material.textfield.TextInputLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/backToMainMenu"
                style="@style/MyButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_style"
                android:text="@string/backToMainMenu" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/submitPost"
                style="@style/MyButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_style"
                android:text="@string/submitPost" />
        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <include layout="@layout/navigation_view_side_panel" />

</androidx.drawerlayout.widget.DrawerLayout>
