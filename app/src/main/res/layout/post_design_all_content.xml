<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutOfPost"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_margin="10dp"
    android:foreground="@drawable/ripple_effect"
    app:cardBackgroundColor="@color/secondary20"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--avatar-->
        <include layout="@layout/image_view_avatar" />

        <!--nazwa sportu-->
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/sportNames"
            style="@style/MyTextInputLayoutDesign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:entries="@array/arrays_sport_names"
            android:gravity="center"
            android:hint="@string/noSportProvided"
            android:paddingTop="10dp"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/userAvatar"
            app:layout_constraintTop_toTopOf="parent" />

        <!--nazwa miasta-->
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/chosenCity"
            style="@style/MyTextInputLayoutDesign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="@string/noCityProvided"
            android:paddingStart="10dp"
            android:paddingEnd="5dp"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBaseline_toTopOf="@+id/skillLevel"
            app:layout_constraintLeft_toRightOf="@+id/userAvatar"
            tools:ignore="TextSizeCheck,TouchTargetSizeCheck" />

        <!--wybor poziomu-->
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/skillLevel"
            style="@style/MyTextInputLayoutDesign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="@string/noSkillLevelProvided"
            android:paddingStart="10dp"
            android:paddingTop="30dp"
            android:paddingEnd="5dp"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/userAvatar"
            app:layout_constraintLeft_toRightOf="@+id/userAvatar"
            tools:ignore="TextSizeCheck,TouchTargetSizeCheck" />

        <!--ilość osób-->
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/numberOfPeople"
            style="@style/MyTextInputLayoutDesign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@null"
            android:gravity="center"
            android:hint="@string/noNumberOfPeopleProvided"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="TextSizeCheck,TouchTargetSizeCheck" />

        <!--dodatkowe info-->
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/addInfoPost"
            style="@style/MyTextInputLayoutDesign"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_margin="5dp"
            android:gravity="start|center_vertical"
            android:hint="@string/noAdditionalInfoProvided"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:ignore="TextSizeCheck,TouchTargetSizeCheck" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
