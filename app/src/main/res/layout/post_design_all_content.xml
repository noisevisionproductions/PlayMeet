<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutOfPost"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:foreground="@drawable/ripple_effect"
    android:minHeight="200dp"
    app:cardBackgroundColor="@color/background"
    app:cardCornerRadius="15dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_background_user_post">

        <!--avatar-->
        <include layout="@layout/avatar_image_view" />

        <!--ikonka usuniecia postu-->
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/deleteIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:contentDescription="@string/reportPost"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:padding="16dp"
            android:src="@drawable/icon_delete"
            android:visibility="gone"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!--ikonka z dodatkowym menu-->
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/overflowIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:contentDescription="@string/reportPost"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:padding="16dp"
            android:src="@drawable/icon_report"
            android:visibility="visible"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!--nazwa sportu-->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/sportNamesLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:paddingTop="10dp"
            app:layout_constraintStart_toEndOf="@+id/userAvatar"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/sportIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="20dp"
                android:minHeight="20dp"
                android:paddingStart="10dp"
                android:paddingEnd="5dp"
                android:src="@drawable/icon_sport" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/sportNames"
                style="@style/MyTextInputLayoutDesign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="@string/noSportProvided"
                android:textSize="15sp"
                android:textStyle="bold"
                android:typeface="serif" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <!--nazwa miasta-->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            app:layout_constraintLeft_toRightOf="@+id/userAvatar"
            app:layout_constraintTop_toBottomOf="@+id/sportNamesLayout">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/locationIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="20dp"
                android:minHeight="20dp"
                android:paddingStart="10dp"
                android:paddingEnd="5dp"
                android:src="@drawable/icon_location" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/chosenCity"
                style="@style/MyTextInputLayoutDesign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="bottom"
                android:hint="@string/noCityProvided"
                android:textSize="15sp"
                android:textStyle="bold"
                android:typeface="serif"
                app:layout_constraintBottom_toBottomOf="@+id/locationIcon"
                app:layout_constraintLeft_toRightOf="@+id/locationIcon"
                tools:ignore="TextSizeCheck,TouchTargetSizeCheck" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <!--wybor poziomu-->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            app:layout_constraintBottom_toBottomOf="@+id/userAvatar"
            app:layout_constraintLeft_toRightOf="@+id/userAvatar">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/skillLevelIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="20dp"
                android:minHeight="20dp"
                android:paddingStart="10dp"
                android:paddingEnd="5dp"
                android:src="@drawable/icon_difficulty" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/skillLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/noSkillLevelProvided"
                android:minWidth="130dp" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <!--ilość osób-->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/numberOfPeopleIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="20dp"
                android:minHeight="20dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:src="@drawable/icon_users" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/numberOfPeople"
                style="@style/MyTextInputLayoutDesign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:contentDescription="@string/noNumberOfPeopleProvided"
                android:gravity="center"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:ignore="TextSizeCheck,TouchTargetSizeCheck" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <!--dodatkowe info-->
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/addInfoPost"
            style="@style/MyTextInputLayoutDesign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="@string/noAdditionalInfoProvided"
            android:minHeight="80dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:typeface="serif"
            app:layout_constraintEnd_toStartOf="@+id/numberOfPeople"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/userAvatar"
            tools:ignore="TextSizeCheck,TouchTargetSizeCheck" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
