<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:baselineAligned="false"
        android:orientation="vertical"
        android:paddingTop="30dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="50dp"
            android:text="@string/sendAnOpinion"
            android:textColor="@color/accent"
            android:textSize="25sp"
            android:textStyle="bold"
            android:typeface="serif" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textWithOpinion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/secondary20"
            android:gravity="start"
            android:hint="@string/whatToWriteAsOpinion"
            android:inputType="textMultiLine|textCapSentences"
            android:maxLength="500"
            android:minHeight="300dp"
            android:padding="20dp"
            android:textColorHint="@color/textHint"
            android:textSize="20sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="50dp"
            android:paddingBottom="10dp"
            android:text="@string/sendAnEmail"
            android:textColor="@color/text"
            android:textSize="20sp"
            android:textStyle="bold"
            android:typeface="serif" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/myEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/ripple_effect"
            android:drawableEnd="@drawable/icon_copy"
            android:drawablePadding="10dp"
            android:paddingTop="10dp"
            android:text="@string/myEmail"
            android:textColor="@color/accent"
            android:textSize="20sp"
            android:textStyle="bold"
            android:typeface="serif" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:baselineAligned="false"
        android:gravity="bottom"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/backToMainMenu"
            style="@style/MyButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_style"
            android:text="@string/menu" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/sendOpinion"
            style="@style/MyButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_style"
            android:text="@string/send" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</RelativeLayout>