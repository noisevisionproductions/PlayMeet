<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/nicknameLayoutFragment"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:background="@color/background">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="5dp">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/getNicknameInputLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Nazwa użytkownika">

                <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                    android:id="@+id/getNicknameInput"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:inputType="text"
                    android:maxLength="30"
                    android:textSize="15sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/checkIfNickAvailable"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_style"
                android:text="Dostępny?"
                android:textColor="#443434"
                android:textSize="12sp"
                android:textStyle="bold"
                android:typeface="serif" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/setUserInfoButtonFirstTime"
            style="@style/MyButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_style"
            android:text="Zrobione" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</FrameLayout>
