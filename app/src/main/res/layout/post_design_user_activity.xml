<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutOfPost"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="10dp"
    android:foreground="@drawable/ripple_effect"
    app:cardBackgroundColor="@color/background"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:background="@color/secondary20"
        android:orientation="horizontal">

        <include layout="@layout/avatar_image_view" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/sport"
            style="@style/MyAppCompatTextViewStyle"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:paddingStart="5dp"
            android:paddingEnd="0dp"
            android:text="@string/provideSports"
            app:layout_constraintStart_toEndOf="@+id/userAvatar"
            app:layout_constraintTop_toTopOf="parent" />

        <!--nazwa sportu-->
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/sportNames"
            style="@style/MyAppCompatTextViewStyle"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@null"
            android:entries="@array/arrays_sport_names"
            android:gravity="center"
            android:hint="@string/userDidNotProvided"
            android:padding="10dp"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/buttonContainer"
            app:layout_constraintStart_toEndOf="@+id/sport"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/city"
            style="@style/MyAppCompatTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center"
            android:paddingStart="5dp"
            android:paddingEnd="0dp"
            android:text="@string/provideCity"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/userAvatar" />

        <!--nazwa miasta-->
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/chosenCity"
            style="@style/MyAppCompatTextViewStyle"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@null"
            android:gravity="center"
            android:hint="@string/userDidNotProvided"
            android:padding="10dp"
            android:textSize="12sp"
            android:textStyle="bold"
            app:hintEnabled="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/buttonContainer"
            app:layout_constraintStart_toEndOf="@+id/city" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/buttonContainer"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/chatButton"
                style="@style/MyButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_style"
                android:text="@string/openChat" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/deletePost"
                style="@style/MyButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_style"
                android:backgroundTint="@color/error"
                android:text="@string/signOutFromThePost" />
        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
